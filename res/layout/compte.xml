<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundrest" >
    
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="442dp" >

    <EditText
        android:id="@+id/id_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_password"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/bgedittext"
        android:drawableLeft="@drawable/user_nom"
        android:ems="10"
        android:hint="Nom" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/id_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/id_login"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgedittext"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:hint="Password" />

    <EditText
        android:id="@+id/id_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_password"
        android:layout_below="@+id/id_password"
        android:layout_marginTop="19dp"
        android:background="@drawable/bgedittext"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:hint="Email" />

    <Button
        android:id="@+id/id_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/id_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/imgbutton"
        android:text="Inscription"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/id_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_button"
        android:layout_toRightOf="@+id/id_email"
        android:text="Retour" />

    <EditText
        android:id="@+id/id_tele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/id_email"
        android:layout_marginTop="19dp"
         android:background="@drawable/bgedittext"
         android:drawableLeft="@drawable/phone"
        android:layout_below="@+id/id_email"
        android:hint="Tele"
        android:ems="10" />

    <EditText
        android:id="@+id/id_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_prenom"
        android:layout_marginTop="27dp"
        android:layout_toLeftOf="@+id/id_home"
        android:background="@drawable/bgedittext"
        android:drawableLeft="@drawable/user"
        android:ems="10"
        android:hint="Login" />

    <EditText
        android:id="@+id/id_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_nom"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/id_home"
        android:background="@drawable/bgedittext"
        android:drawableLeft="@drawable/user"
        android:ems="10"
        android:hint="Prenom" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/tonimage" />

</RelativeLayout>
</ScrollView>