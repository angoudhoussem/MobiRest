<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundrest"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/id_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/w" />

    <TextView
        android:id="@+id/id_nom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="11dp"
        android:text="Nom"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/brown" />

    <TextView
        android:id="@+id/id_adresse1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:text="Adresse"
        android:textColor="@color/brown" />

    <TextView
        android:id="@+id/id_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:text="Info"
        android:textColor="@color/brown" />

    <TextView
        android:id="@+id/id_typecuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:text="type cuisine" 
        android:textColor="@color/brown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp"
        android:layout_weight="0.07" >

        <ImageView
            android:id="@+id/id_img_like1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:src="@drawable/like" />

        <ImageView
            android:id="@+id/id_img_comment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:src="@drawable/comments" />

        <ImageView
            android:id="@+id/id_img_share1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:src="@drawable/share_32x32" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="111dp"
        android:gravity="center"
        android:text="Voir Photos"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/rosybrown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp" >

        <Button
            android:id="@+id/id_map1"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/imgbutton"
            android:text="Map" />

        <Button
            android:id="@+id/id_reservation1"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0.00"
            android:background="@drawable/imgbutton"
            android:text="Reservation" />
    </LinearLayout>

</LinearLayout>