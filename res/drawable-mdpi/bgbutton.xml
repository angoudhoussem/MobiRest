<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
 
    <corners android:radius="10dip" />
 
    <gradient
        android:angle="90"
        android:centerColor="#0c2a46"
        android:centerY="0.4"
        android:endColor="#1E90FF"
        android:startColor="#000080"
        android:type="linear" />
 
    <padding
        android:bottom="15dip"
        android:left="20dip"
        android:right="20dip"
        android:top="15dip" />
 
    <stroke
        android:width="1dip"
        android:color="#222" />
 
</shape>
